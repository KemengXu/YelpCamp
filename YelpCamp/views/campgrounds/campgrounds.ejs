<%- include("../partials/header") %>
<div class="container mt-3">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp</h1>
            <p>View our hand-picked campgrounds from all over the world</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add new campground</a>
            </p>
        </div>
    </header>
    <div class="row text-center" style="display: flex; flex-wrap: wrap">
        <% campgrounds.forEach((cg)=>{ %>
            <div class="col-lg-3 col-md-4 col-sm-6">
                <div class="img-thumbnail mb-3">
                    <img src="<%=cg.image%>" alt="loading..." style="width: 100%; height:176px; overflow:hidden">
                    <div class="caption">
                        <h5><%=cg.name%></h5>
                    </div>
                    <p>
                        <a class="btn btn-primary" href="/campgrounds/<%= cg._id %>">more</a>
                    </p>
                </div>
            </div>
        <%})%>
    </div>
</div>

<%- include("../partials/footer") %>