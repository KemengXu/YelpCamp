<%- include("../partials/header")%>
<div class="container">
    <h1 style="text-align: center; margin-top: 30px">Create a new campground</h1>
    <div class="" style="width:30%; margin: 30px auto;">
        <form action="/campgrounds/<%= cg._id%>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" value="<%= cg.name%>" name="name">
            </div>
            <div class="form-group">
                <input class="form-control" type="number" value="<%= cg.price%>" name="price", min="0.01", step="0.01">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" value="<%= cg.image%>" name="image">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" value="<%= cg.description%>" name="description">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit</button>
            </div>
        </form>
        <a class="mt-5 btn btn-outline-secondary btn-lg btn-block" href="/campgrounds">Go back</a>
    </div>
</div>

<%- include("../partials/footer")%>