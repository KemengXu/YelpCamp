<%- include("../partials/header")%>
<div class="container">
    <h1 style="text-align: center; margin-top: 30px">Add new comment to <%= cg.name%></h1>
    <div class="" style="width:30%; margin: 30px auto;">
        <form action="/campgrounds/<%= cg._id%>/comments" method="POST">
            <div class="form-group">
                <textarea class="form-control" placeholder="new comment here" name="text"></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit</button>
            </div>
        </form>
        <a class="mt-5 btn btn-outline-secondary btn-lg btn-block" href="/campgrounds">Go back</a>
    </div>
</div>

<%- include("../partials/footer")%>